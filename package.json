{
  "name": "startup-template",
  "version": "1.0.0",
  "description": "Startup Template for MERN project",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server \" \"npm run client\"",
